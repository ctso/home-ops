{
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "cert-manager",
        "coredns",
        "external-dns",
        "grafana",
        "kube-prometheus-stack",
        "node-feature-discovery",
        "reloader"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackagePattern": [
        "ghcr.io/home-assistant"
      ]
    }
  ]
}
